                <i class="fas fa-user-circle fa-3x"></i>
                <div>{{writer.name}}</div>
            </div>
            <div class="step-contributor">
                <i class="fas fa-user-circle fa-3x"></i>
                <div>{{writer.name}}</div>
            </div>
            <div class="step-contributor">
                <i class="fas fa-user-circle fa-3x"></i>
                <div>{{writer.name}}</div>
            </div>
            <div class="step-contributor">
                <i class="fas fa-user-circle fa-3x"></i>
                <div>{{writer.name}}</div>
            </div>
        </div>
    {{/unless}}
</article>