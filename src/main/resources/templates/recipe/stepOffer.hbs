<div class="step-offers" data-step-id="{{id}}">
    <h2 class="step-offer-title is-size-2"><i class="fas fa-bong"></i> Step Offers</h2>
    {{#offers}}
        {{#unless rejected}}
            <div class="step-offer" data-offer-id="{{id}}">
                <a class="hero is-info step-offer-title-bar">
                    <h3 class="title">{{name}} <span
                            class="step-offer-open is-pulled-right"><i class="fas fa-angle-down"></i></span></h3>
                </a>
                {{> recipe/stepBox isOffer=true}}
            </div>
        {{/unless}}
    {{/offers}}
</div>