<div class="step-container">
    <h2 class="step-title is-size-2 has-text-weight-bold"><i class="fas fa-utensils fa-2x"></i>Step {{@index_1}}</h2>
    {{> recipe/stepBox}}

    {{#unless completed}}
        {{#if offers}}
            {{> recipe/stepOffer}}
        {{/if}}
    {{/unless}}

    {{#unless completed}}
        {{> recipe/addBtn id=id}}
    {{/unless}}
</div>