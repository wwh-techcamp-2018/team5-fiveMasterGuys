{{#partial "head"}}
    <link href="/css/user.css" rel="stylesheet">
    <script type="module" src="/js/users/utils.js"></script>
    <script type="module" src="/js/users/signup.js"></script>
{{/partial}}

{{#partial "contents"}}
<section class="hero is-fullheight">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <h3 class="title has-text-grey">Sign up</h3>
                <p class="subtitle has-text-grey">Please sign up.</p>
                <div class="box">
                    <div class="field">
                        <div class="control">
                            <input class="input is-medium" id="email-field" type="email"
                                   placeholder="Email(test@woowahan.com)"
                                   autofocus="">
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <input class="input is-medium" id="password-field" , type="password"
                                   placeholder="비밀번호(숫자와 문자 조합 8 ~ 16자리)">
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <input class="input is-medium" id="password-check-field" , type="password"
                                   placeholder="비밀번호 확인(숫자와 문자 포함 8 ~ 16자리)">
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <input class="input is-medium" id="name-field" , type="text"
                                   placeholder="이름(2 ~ 40자)">

                        </div>
                    </div>
                    <button id="signup-btn" class="button is-block is-info is-medium is-fullwidth">Sign up</button>
                </div>
                <div id="error-msg-box" class="column"></div>

            </div>
        </div>
    </div>
</section>
<script src="/js/users/signup.js"></script>
{{/partial}}

{{>base}}

